<%- include('../partials/header.ejs')%>
<h2>Search Writings</h2>
<form action="/writings" method="GET">
    <label>Headline</label>
    <input type="text" name="headline" value="<%= searchOptions.headline %> ">
    <button type="submit">Search</button>
</form>
<br>
<% writings.forEach(writing => { %> 
    
    <img width="250" src="https://res.cloudinary.com/dmupfimgd/image/upload/<%= writing.writingImageName %>.<%= writing.writingFormat %>">
    <div class="headline"><%= writing.headline %></div>
    <div class="description"><%= writing.description %></div>
    <div class="description"><%= writing.writingURL %></div>
    <div class="description"><%= writing.sourceType %></div>
    <a class="description" href="/writings/<%= writing.id %>/edit">Edit</a>
    <%- include('../partials/deleteForm',
                { url: `/writings/${writing.id}` }) %>
<br>
<hr>
<% }) %> 